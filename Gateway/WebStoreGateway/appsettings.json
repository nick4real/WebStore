{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "authService-route": {
        "ClusterId": "userService-cluster",
        "Match": {
          "Path": "api/auth/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "auth/{**catch-all}"
          }
        ]
      },
      "userService-route": {
        "ClusterId": "userService-cluster",
        "Match": {
          "Path": "api/user/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "users/{**catch-all}"
          }
        ]
      },
      "productService-route": {
        "ClusterId": "productService-cluster",
        "Match": {
          "Path": "api/products/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "products/{**catch-all}"
          }
        ]
      },
      "blazorWebApp-route": {
        "ClusterId": "blazorWebApp-cluster",
        "Match": {
          "Path": "{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          },
          {
            "RequestHeader": "X-Forwarded-Host",
            "Set": "{RequestHeader:Host}"
          },
          {
            "ResponseHeader": "X-Forwarded-Proto",
            "Set": "{Scheme}"
          }
        ]
      }
    },
    // Adressess initialized at runtime
    "Clusters": {
      "blazorWebApp-cluster": {
        "Destinations": {
          "destination-1": {
            "Address": ""
          }
        }
      },
      "userService-cluster": {
        "Destinations": {
          "destination-1": {
            "Address": ""
          }
        }
      },
      "productService-cluster": {
        "Destinations": {
          "destination-1": {
            "Address": ""
          }
        }
      }
    }
  }
}
